<mvc:View xmlns='sap.m'
    xmlns:mvc="sap.ui.core.mvc" controllerName="path.calculator.controller.App">
    <Shell >
        <App>
            <pages>
                <Page title="Calculator">
                    <content>
                        <FlexBox justifyContent="Center" alignItems="Center" height="50%">
                            <VBox width="20em" alignContent="Center" alignItems="Center">
                                <Panel width="20em" headerText="Basic Calculator">
                                    <!-- <Input id="valInput" textDirection="RTL" type="Number" width="100%" liveChange="true" /> -->
                                    <!-- <Text id="valInput" text="" textAlign="End"></Text> -->
                                    <TextArea id="valInput" placeholder="Input" rows="4" cols="50" editable="false"
                                    liveChange="true" textDirection="RTL" 
                                    />
                                </Panel>
                                <Panel width="20em">
                                    <HBox>
                                        <VBox alignContent="Center" alignItems="Center">
                                            <Button id="bt1" text="1" type="Emphasized" press="onPressOfButton('1')" />
                                            <Button id="bt4" text="4" type="Emphasized" press="onPressOfButton('4')" />
                                            <Button id="bt7" text="7" type="Emphasized" press="onPressOfButton('7')" />
                                            <Button id="bck" text="CL" type="Emphasized" press="onPressOfBack()" />
                                        </VBox>
                                        <VBox width="1em"></VBox>
                                        <VBox alignContent="Center" alignItems="Center">
                                            <Button id="bt2" text="2" type="Emphasized" press="onPressOfButton('2')" />
                                            <Button id="bt5" text="5" type="Emphasized" press="onPressOfButton('5')" />
                                            <Button id="bt8" text="8" type="Emphasized" press="onPressOfButton('8')" />
                                            <Button id="bt0" text="0" type="Emphasized" press="onPressOfButton('0')" />
                                        </VBox>
                                        <VBox width="1em"></VBox>
                                        <VBox alignContent="Center" alignItems="Center">
                                            <Button id="bt3" text="3" type="Emphasized" press="onPressOfButton('3')" />
                                            <Button id="bt6" text="6" type="Emphasized" press="onPressOfButton('6')" />
                                            <Button id="bt9" text="9" type="Emphasized" press="onPressOfButton('9')" />
                                            <Button id="dot" text="." type="Emphasized" press="onPressOfButton('.')" />

                                        </VBox>
                                        <VBox width="1em"></VBox>
                                        <VBox alignContent="Center" alignItems="Center">
                                            <Button text="+" type="Emphasized" press="onPressOfOperation('+')" />
                                            <Button text="-" type="Emphasized" press="onPressOfOperation('-')" />
                                            <Button text="*" type="Emphasized" press="onPressOfOperation('*')" />
                                            <Button text="/" type="Emphasized" press="onPressOfOperation('/')" />
                                        </VBox>

                                        <VBox width="1em"></VBox>
                                        <VBox alignContent="Center" alignItems="Center" direction="ColumnReverse">
                                            <Button text="=" type="Emphasized" press="" />
                                            <Button id="clr" text="AC" type="Emphasized" press="onPressOfButton('AC')" />
                                        </VBox>

                                    </HBox>
                                </Panel>
                            </VBox>
                        </FlexBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
