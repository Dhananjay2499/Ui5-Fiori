<mvc:View controllerName="ui5.walkthrough.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <Button text="{i18n>showHelloButtonText}" press="onClick" class="sapUiSmallMarginEnd"/>
            <Input id="input" width="500px" textDirection="LTR" type="Text" description="{i18n>helloString} {/recipient/name}" value="{/recipient/name}" valueLiveUpdate="true" class="sapUiSmallMarginEnd"></Input>
            <Text text="{i18n>helloString} {/recipient/name}" class="sapUiSmallMargin"></Text>
        </content>
    </Panel>

</mvc:View>