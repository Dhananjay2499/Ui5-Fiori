<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" controllerName="ui5.walkthrough.controller.App">
    
    <Button text="{i18n>showHelloButtonText}" 
            press="onClick"
            
            />
    <Input id="input" 
            width="500px" 
            textDirection="LTR" 
            type="Text"
            description="{i18n>helloString} {/recipient/name}"
            value="{/recipient/name}"
            valueLiveUpdate="true"
            ></Input>

</mvc:View>

